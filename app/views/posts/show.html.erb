<section class="text-gray-600 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <div class="lg:w-4/5 mx-auto flex flex-wrap justify-between">
      <img alt="ecommerce" class="lg:w-1/2 w-full lg:h-auto h-64 object-cover object-center rounded" src="https://dummyimage.com/400x400">
      <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0 relative">
        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-sm title-font text-gray-500 tracking-widest">観光地名</h2>
            <div class="flex justify-end flex-1">
              <%= image_tag 'kanagawaken.png', alt: 'Icon', class: 'absolute right-0 top-0 w-[100px] h-[100px] object-cover' %>
            </div>
            <div class="flex items-center mt-1 mb-4">
              <h1 class="text-gray-900 text-3xl title-font font-medium mb-1 mr-4"><%= @post.location %></h1>
                <div class="flex">
                  <span class="flex items-center pl-3 py-2 border-l-2 border-gray-200">
                  <a class="text-gray-500">
                  <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
                  </svg>
                  </a>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="flex flex-col mb-4">
            <p class="leading-relaxed mb-4 mt-1"><%= @post.text %></p>
            <div class="flex">
            <span class="mr-3">タグ</span>
            絶景・神奈川県・温泉
            </div>
          </div>
          <div class="flex  mt-6 items-center pb-5 border-b-2 border-gray-100 mb-5">
            <span class="mr-3">投稿者</span>
            <%= @post.user.name %>
          <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
            <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
              <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
            </svg>
          </button>
          </div>
          <div class="flex justify-end">
          <button class="btn mr-3">編集</button>
          <button class="btn btn-error">編集</button>
          </div>
        </div>
      </div>
    </div>
</section>