<header class="text-gray-600 body-font bg-gray-100">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to root_path, class: "flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" do %>
      <%= image_tag 'logo.png', class: 'w-full h-auto rounded', style: 'max-width: 200px; max-height: 150px;' %>
    <% end %>
    <!-- Desktop Menu -->
    <nav class="text-xs md:flex md:ml-auto flex-nowrap items-center justify-center">
      <%= link_to 'プロフィール', profile_path, class: "mr-4 hover:text-gray-900" %>
      <%= link_to 'マイページ', '/mypage', class: "mr-4 hover:text-gray-900" %>
      <%= link_to '投稿する', new_post_path, class: "mr-4 hover:text-gray-900" %>
      <%= link_to '探す', '/search', class: "mr-4 hover:text-gray-900" %>
      <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete }, class: "hover:text-gray-900" %>
    </nav>

  </div>
</header>
