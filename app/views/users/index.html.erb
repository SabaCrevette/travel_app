<section class="text-gray-600 body-font">
  <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
    <h1 class="title-font sm:text-4xl text-3xl mb-6 font-medium text-gray-900"><%= current_user.name %>さんのマイページ</h1>
    <% post_count = current_user.posts.select(:prefecture_id).distinct.count %>
    <!-- 色塗りマップ -->
    <%= render 'japanmap', user_prefectures: @user_prefectures, text: @text %>
    <h2 class="mt-4 text-xl"><%= "#{post_count} 都道府県を探索しました" %></h2>
    <%= link_to "https://twitter.com/intent/tweet?text=#{ERB::Util.url_encode("#{post_count}/47都道府県制覇しました")}&url=#{ERB::Util.url_encode(request.original_url)}&hashtags=Travel_app", target: "_blank", rel: "noopener" do %>
      <i class="fa-brands fa-square-x-twitter fa-2x"></i>
    <% end %>
  </div>
</section>




<div class="flex flex-col justify-center items-center">
  <div id="buttons"justify-self class="grid grid-cols-2 gap-4 mx-auto max-w-lg"> <!-- mx-auto max-w-lg rounded-lg border -->

    <%= link_to '投稿する', new_post_path, class: "btn btn-outline col-span-2 sm:col-span-1 max-w-xs" %>
    <%= link_to '他の人の投稿を見る', '/search', class: "btn btn-outline col-span-2 sm:col-span-1 max-w-xs" %>

    <%= link_to '準備中', '#', class: "btn btn-outline col-span-2 sm:col-span-1 max-w-xs", disabled: "disabled" %> 
    <%= link_to 'ブックマーク', bookmarks_posts_path, class: 'btn btn-outline col-span-2 sm:col-span-1 max-w-xs', role: "button" %>
<!-- -->
    <% post_count = current_user.posts.select(:prefecture_id).distinct.count %>

  </div>
</div>


<div id="posts-list-section" class="bg-white py-6 sm:py-8 lg:py-12">
<div class="mx-auto max-w-screen-2xl px-4 md:px-8">
  <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl xl:mb-12"><%= current_user.name %>さんの投稿一覧</h2>

  <% if @posts.present? %>
    <div class="mb-4 grid grid-cols-1 gap-4 sm:grid-cols-3 md:mb-8 md:grid-cols-4 md:gap-6 xl:gap-8">
      <%= render partial: 'posts/post', collection: @posts, as: :post %>
    </div>
  <% else %>
    <div class="flex flex-col items-center justify-center">
      <div class="text-xl font-bold mb-4">まだ投稿していません！</div>
      <%= link_to '投稿する', new_post_path, class: "btn btn-outline  px-4 py-2 rounded font-bold" %>
    </div>
  <% end %>
</div>
</div>
<!-- bg-blue-100 hover:bg-blue-200 -->